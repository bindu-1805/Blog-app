<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog-app</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">

</head>
<body>
  <header>
    <h1>Blogs</h1>
    <a href="/new-post" class="new-post-btn">Create New Post</a>
  </header>

  <main>
    <% if (posts.length > 0) { %>
      <ul class="post-list">
        <% posts.forEach((post, index) => { %>
          <li class="post-item">
            <a href="/post/<%= index %>"><h2><%= post.title %></h2></a>
            <p><%= post.date %></p>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No posts yet. <a href="/new-post">Create one!</a></p>
    <% } %>
  </main>
</body>
</html>
